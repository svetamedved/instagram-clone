<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">

  </head>

    <body>
      <div class="container">

        <div class="row">
            <div class="col-md-8 offset-md-2">
              <div class="row">
                <div class="col-md-4">
                    <img style="border-radius:50%; border:1px solid #ededed " src="{{user.profile_pic_url}}">
                </div>
            <div class="col-md-8">
              <h1 style="fornt-size: 32px;line-height: 40px; font-weight: 200;">{{user.username}}</h1>
            </div>

                <div class="row">
                  <div class="col-md-3">
                    <strong>{{user.edge_owner_to_timeline_media.count}}</strong><span> Posts</span>
                  </div>

                  <div class="col-md-3">
                    <strong>{{user.edge_followed_by.count}}</strong><span> Followers</span>
                  </div>

                  <div class="col-md-3">
                    <strong>{{user.edge_follow.count}}</strong><span> Following</span>
                  </div>

                </div>
                <div class="row">
                  <p style="margin-top:24px">{{user.biography}}
                  </p>
                </div>


                {{#user.edge_owner_to_timeline_media.edges}}
                  <div class="col-md-4">
                    <div style="padding:12px">
                      <img style="width:100%" src="{{node.thumbnail_src}}" />
                    </div>
                  </div>
                {{/user.edge_owner_to_timeline_media.edges}}
        </div>

      </div>
      </div>


    </body>

</html>
